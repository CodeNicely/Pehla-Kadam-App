<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iket.pehlakadam.reviews.view.ReviewsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/card1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:stepSize="1.0" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_margin="4dp"
            android:textSize="22dp"
            android:id="@+id/review"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:text="&quot;You guys are doing a great social work.  &quot;"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:text="Reviewed by:-\nSuresh kumar gupta"
            android:textColor="@color/colorPrimary"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/card1"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="4"

                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:stepSize="1.0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar1"
                android:layout_margin="4dp"
                android:textSize="22dp"
                android:id="@+id/review1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="&quot;Your app runs really smooth.Hope we get fantastic updates in future.  &quot;"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review1"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:text="Reviewed by:-\nMukesh Jain"
                android:textColor="@color/colorPrimary"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
