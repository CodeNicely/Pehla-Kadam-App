<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="4dp"
            app:cardBackgroundColor="#00998899"
            card_view:cardCornerRadius="8dp"
            card_view:contentPadding="8dp">

            <LinearLayout
                android:id="@+id/contactUsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/activity_vertical_margin"
                    android:text="@string/contact_us"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/imageProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:padding="8dp" />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/emailCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="2dp"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/emailImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="4dp"
                            android:src="@drawable/ic_email_black_24dp" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/phoneCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="2dp"
                    app:contentPadding="2dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mobileImage"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/ic_phone_black_24dp" />

                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="2dp"
                    android:id="@+id/locationCard"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addressImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:padding="4dp"
                            android:src="@drawable/ic_location_on_black_24dp" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="136dp"
                            android:layout_marginRight="136dp"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:id="@+id/websiteCard"
                    app:cardCornerRadius="2dp"
                    app:contentPadding="2dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/websiteImage"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/ic_language_black_24dp" />

                        <TextView
                            android:id="@+id/website"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="2dp"
                    android:id="@+id/facebookCard"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:id="@+id/facebookLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facebookImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/facebook" />

                        <TextView
                            android:id="@+id/facebook"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="2dp"
                    android:id="@+id/twitterCard"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:id="@+id/twitterLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/twitterImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/twitter_colored" />

                        <TextView
                            android:id="@+id/twitter"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:id="@+id/instagramCard"
                    app:cardCornerRadius="2dp"
                    app:contentPadding="2dp">

                    <LinearLayout
                        android:id="@+id/instagramLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/instaImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/instagram_colored" />

                        <TextView
                            android:id="@+id/instagram"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:padding="4dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"

        />

</RelativeLayout>